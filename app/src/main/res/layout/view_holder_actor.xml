<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="7dp"
    android:layout_marginStart="@dimen/space_2x"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/view_holder_actor_iv"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintDimensionRatio="1"
        android:layout_marginStart="@dimen/space_2x"
        tools:src="@drawable/robert_downey_junior"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/view_holder_actor_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Robert Downey Jr"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="#D8D8D8"
        app:layout_constraintStart_toStartOf="@id/view_holder_actor_iv"
        app:layout_constraintEnd_toEndOf="@id/view_holder_actor_iv"
        app:layout_constraintTop_toBottomOf="@id/view_holder_actor_iv"
        android:layout_marginTop="6dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>